<body>

   
    <div class="search-box">
        <input type="text" id="search" placeholder="Search product by name...">
    </div>

    <div class="filter-buttons">
        <button class="all active">All</button>
        <button class="elec">Electronics</button>
        <button class="clot">Clothing</button>
    </div>

    <div class="cards"></div>

    <script>
        const items = [
            ["maths","book"],["science","book"],["english","book"],
            ["laptop","Electronics"],["mobile","Electronics"],["tablet","Electronics"],
            ["shirt","Clothing"],["Tshirt","Clothing"],["jacket","Clothing"],["exam manual",'book']
        ];

        const div = document.querySelector('.cards');
        const searchInput = document.querySelector('#search');

        let currentCategory = "All";  

        function display(){
            let card = "";
            let text = searchInput.value.toLowerCase();

            items.forEach(item => {
                let name = item[0].toLowerCase();
                let category = item[1];

                let matchCategory = (currentCategory === "All" || category === currentCategory);
                let matchSearch = name.includes(text);

                if(matchCategory && matchSearch){
                    card += `
                        <div class="items">
                            <h2>${item[0]}</h2>
                            <p>type = ${item[1]}</p>
                        </div>
                    `;
                }
            });

            div.innerHTML = card;
        }

        // Buttons
        const allbtn = document.querySelector('.all'); 
        const elecbtn = document.querySelector('.elec'); 
        const clotbtn = document.querySelector('.clot'); 

        function setActive(btn){
            document.querySelectorAll("button").forEach(b=>b.classList.remove("active"));
            btn.classList.add("active");
        }

        allbtn.onclick = ()=>{ currentCategory = "All"; setActive(allbtn); display(); };
        elecbtn.onclick = ()=>{ currentCategory = "Electronics"; setActive(elecbtn); display(); };
        clotbtn.onclick = ()=>{ currentCategory = "Clothing"; setActive(clotbtn); display(); };

        // Search filters instantly
        searchInput.addEventListener("keyup", display);

        display(); // initial
    </script>

</body>
</html>
