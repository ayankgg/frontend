    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Product Filter</title>

    <style>
        body{
            font-family: Arial, sans-serif;
            background: #f3f4f6;
            padding: 30px;
        }

        /* Buttons */
        .filter-buttons{
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        button{
            padding: 15px 25px;
            border-radius: 30px;
            border: none;
            cursor: pointer;
            background-color: white;
            box-shadow: 0 3px 7px rgba(0,0,0,0.2);
            font-size: 16px;
            transition: .3s;
        }

        button:hover{
            background-color: #2563eb;
            color: white;
            transform: scale(1.05);
        }

        button.active{
            background-color: #2563eb;
            color: white;
        }

        /* Search box */
        .search-box {
            margin-bottom: 25px;
        }

        .search-box input{
            width: 300px;
            padding: 12px 18px;
            border-radius: 25px;
            border: none;
            box-shadow: 0 3px 7px rgba(0,0,0,0.15);
            font-size: 16px;
            outline: none;
        }

        /* Cards */
        .cards{
            display:flex;
            flex-wrap: wrap;
            gap:20px;
        }

        .items{
            background: white;
            width:200px;
            padding:20px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            transition: .3s;
        }

        .items:hover{
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .items h2{
            margin: 0;
            color: #1f2937;
        }

        .items p{
            margin-top: 8px;
